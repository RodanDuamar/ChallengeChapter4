<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SuitJepangActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="380dp"
        android:layout_height="650dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/tvKertasGuntingBatu"
        android:layout_width="200dp"
        android:background="@color/purple_200"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="@string/kertas_gunting_batu"
        android:textSize="40sp"
        android:layout_marginTop="100dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvPemain1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pemain_1"
            app:layout_constraintEnd_toStartOf="@+id/tvKertasGuntingBatu"
            app:layout_constraintTop_toBottomOf="@id/tvKertasGuntingBatu" />

        <ImageButton
            android:id="@+id/ibBatu"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_batu_svg"
            app:layout_constraintEnd_toEndOf="@+id/tvPemain1"
            app:layout_constraintStart_toStartOf="@+id/tvPemain1"
            app:layout_constraintTop_toBottomOf="@id/tvPemain1"/>

        <ImageButton
            android:id="@+id/ibKertas"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kertas"
            app:layout_constraintEnd_toEndOf="@+id/ibBatu"
            app:layout_constraintStart_toStartOf="@+id/ibBatu"
            app:layout_constraintTop_toBottomOf="@+id/ibBatu"/>

        <ImageButton
            android:id="@+id/ibGunting"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gunting"
            app:layout_constraintEnd_toEndOf="@+id/ibKertas"
            app:layout_constraintStart_toStartOf="@+id/ibKertas"
            app:layout_constraintTop_toBottomOf="@+id/ibKertas" />


        <TextView
            android:id="@+id/tvCOM"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/COM"
            app:layout_constraintStart_toEndOf="@+id/tvKertasGuntingBatu"
            app:layout_constraintTop_toBottomOf="@id/tvKertasGuntingBatu" />

        <ImageButton
            android:id="@+id/ibBatu2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/ic_batu_svg"
            app:layout_constraintEnd_toEndOf="@+id/tvCOM"
            app:layout_constraintStart_toStartOf="@+id/tvCOM"
            app:layout_constraintTop_toBottomOf="@+id/tvCOM"/>

        <ImageButton
            android:id="@+id/ibKertas2"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/kertas"
            app:layout_constraintEnd_toEndOf="@+id/ibBatu2"
            app:layout_constraintStart_toStartOf="@+id/ibBatu2"
            app:layout_constraintTop_toBottomOf="@+id/ibBatu2"/>

        <ImageButton
            android:id="@+id/ibGunting2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/gunting"
            app:layout_constraintEnd_toEndOf="@+id/ibKertas2"
            app:layout_constraintStart_toStartOf="@+id/ibKertas2"
            app:layout_constraintTop_toBottomOf="@+id/ibKertas2"/>


        <TextView
            android:id="@+id/tvVersus"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/vs"
            android:textColor="@color/white"
            android:background="#BF00FF"
            android:textSize="30sp"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvKertasGuntingBatu" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageButton
        android:id="@+id/ibRefresh"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/ic_refresh_svg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>